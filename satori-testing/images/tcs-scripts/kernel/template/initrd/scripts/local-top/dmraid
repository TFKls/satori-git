#!/bin/sh

# local-top script for dmraid.

PREREQS=""
prereqs()
{
	echo $PREREQS
}

case $1 in
# get pre-requisites
prereqs)
	prereqs
	exit 0
	;;
esac

. /scripts/functions
wait_for_udev 30

# Activate any dmraid arrays that were not identified by udev and vol_id.

if devices=$(dmraid -r -c); then
	for dev in $devices; do
		dmraid-activate $dev
	done
fi
